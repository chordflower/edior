  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-distribution</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <attach>true</attach>
              <archive>
                <addMavenDescriptor>true</addMavenDescriptor>
                <index>true</index>
                <compress>true</compress>
                <manifest>
                  <addBuildEnvironmentEntries>true</addBuildEnvironmentEntries>
                  <addDefaultEntries>true</addDefaultEntries>
                  <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                  <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                </manifest>
              </archive>
              <descriptors>
                <descriptor>${project.basedir}/src/assembly/distribution.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-distribution</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <copy file="${project.basedir}/target/edior-dist-0.0.1-SNAPSHOT.tar.bz2" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT.tar.bz2"/>
                <copy file="${project.basedir}/target/edior-dist-0.0.1-SNAPSHOT.tar.gz" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT.tar.gz"/>
                <copy file="${project.basedir}/target/edior-dist-0.0.1-SNAPSHOT.tar.xz" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT.tar.xz"/>
                <copy file="${project.basedir}/target/edior-dist-0.0.1-SNAPSHOT.zip" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT.zip"/>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-distribution</id>
            <phase>clean</phase>
