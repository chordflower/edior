  <profiles>
    <profile>
      <id>macos-dist</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.igormaznitsa</groupId>
            <artifactId>mvn-jlink-wrapper</artifactId>
            <version>1.1.0</version>
            <executions>
              <execution>
                <id>download-osx-jdk</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>cache-jdk</goal>
                </goals>
                <configuration>
                  <provider>ADOPT</provider>
                  <providerConfig>
                    <release>15</release>
                    <arch>x64</arch>
                    <os>mac</os>
                    <type>jre</type>
                  </providerConfig>
                  <jdkPathProperty>mac.jvm.path</jdkPathProperty>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>de.perdian.maven.plugins</groupId>
            <artifactId>macosappbundler-maven-plugin</artifactId>
            <version>1.10.0</version>
            <executions>
              <execution>
                <id>generate-mac-bundle-with-jre</id>
                <phase>package</phase>
                <goals>
                  <goal>bundle</goal>
                </goals>
                <configuration>
                  <plist>
                    <CFBundleIconFile>src/main/resources/logo.icns</CFBundleIconFile>
                    <CFBundleDisplayName>edior</CFBundleDisplayName>
                    <CFBundleIdentifier>${project.groupId}.edior</CFBundleIdentifier>
                    <CFBundleName>Edior-Extra</CFBundleName>
                    <CFBundleExecutable>edior</CFBundleExecutable>
                    <JVMMainClassName>cc.chordflower.edior.EdiorApplication</JVMMainClassName>
                    <JVMVersion>15+</JVMVersion>
                    <JVMOptions>
                      <string>--add-opens=java.base/java.lang=ALL-UNNAMED</string>
                      <string>-XX:+UseZGC</string>
                      <string>-Xmx1024m</string>
                    </JVMOptions>
                    <NSHighResolutionCapable>true</NSHighResolutionCapable>
                  </plist>
                  <jdk>
                    <include>true</include>
                    <!--suppress UnresolvedMavenProperty -->
                    <location>${mac.jvm.path}</location>
                  </jdk>
                  <nativeBinary>X86_64</nativeBinary>
                  <dmg>
                    <generate>true</generate>
                    <createApplicationsSymlink>true</createApplicationsSymlink>
                    <autoFallback>true</autoFallback>
                    <dmgFileName>${project.build.finalName}-jre</dmgFileName>
                  </dmg>
                </configuration>
              </execution>
              <execution>
                <id>generate-mac-bundle-without-jre</id>
                <phase>package</phase>
                <goals>
                  <goal>bundle</goal>
                </goals>
                <configuration>
                  <plist>
                    <CFBundleIconFile>src/main/resources/logo.icns</CFBundleIconFile>
                    <CFBundleDisplayName>edior</CFBundleDisplayName>
                    <CFBundleIdentifier>${project.groupId}.edior</CFBundleIdentifier>
                    <CFBundleName>Edior</CFBundleName>
                    <CFBundleExecutable>edior</CFBundleExecutable>
                    <JVMMainClassName>cc.chordflower.edior.EdiorApplication</JVMMainClassName>
                    <JVMVersion>15+</JVMVersion>
                    <JVMOptions>
                      <string>--add-opens=java.base/java.lang=ALL-UNNAMED</string>
                      <string>-XX:+UseZGC</string>
                      <string>-Xmx1024m</string>
                    </JVMOptions>
                    <NSHighResolutionCapable>true</NSHighResolutionCapable>
                  </plist>
                  <dmg>
                    <generate>true</generate>
                    <createApplicationsSymlink>true</createApplicationsSymlink>
                    <autoFallback>true</autoFallback>
                    <dmgFileName>${project.build.finalName}</dmgFileName>
                  </dmg>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-distribution-mac</id>
                <phase>package</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <target>
                    <copy file="${project.basedir}/target/Edior-Extra_0.0.1-SNAPSHOT.dmg" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT-mac-jre.dmg"/>
                    <copy file="${project.basedir}/target/Edior_0.0.1-SNAPSHOT.dmg" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT-mac.dmg"/>
                  </target>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>windows-dist</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.igormaznitsa</groupId>
            <artifactId>mvn-jlink-wrapper</artifactId>
            <version>1.1.0</version>
            <executions>
              <execution>
                <id>download-windows-jdk</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>cache-jdk</goal>
                </goals>
                <configuration>
                  <provider>ADOPT</provider>
                  <providerConfig>
                    <release>15</release>
                    <arch>x64</arch>
                    <os>windows</os>
                    <type>jre</type>
                  </providerConfig>
                  <jdkPathProperty>windows.jvm.path</jdkPathProperty>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>com.akathist.maven.plugins.launch4j</groupId>
            <artifactId>launch4j-maven-plugin</artifactId>
            <version>2.1.0</version>
            <executions>
              <execution>
                <id>generate-windows-executable</id>
                <phase>package</phase>
                <goals>
                  <goal>launch4j</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <headerType>gui</headerType>
              <icon>${project.basedir}/src/main/resources/logo.ico</icon>
              <jre>
                <path>jre</path>
                <bundledJre64Bit>true</bundledJre64Bit>
                <bundledJreAsFallback>true</bundledJreAsFallback>
                <runtimeBits>64</runtimeBits>
                <minVersion>15</minVersion>
                <opts>
                  <opt>--add-opens=java.base/java.lang=ALL-UNNAMED</opt>
                  <opt>-XX:+UseZGC</opt>
                </opts>
                <maxHeapSize>1024</maxHeapSize>
              </jre>
              <jar>./lib/edior-editor-${project.version}.jar</jar>
              <dontWrapJar>true</dontWrapJar>
              <classPath>
                <mainClass>cc.chordflower.edior.EdiorApplication</mainClass>
                <addDependencies>true</addDependencies>
                <jarLocation>lib/</jarLocation>
              </classPath>
              <saveConfig>true</saveConfig>
              <downloadUrl>https://api.adoptopenjdk.net/v3/binary/latest/15/ga/windows/x64/jre/hotspot/normal/adoptopenjdk</downloadUrl>
              <outfile>${project.build.directory}/${project.build.finalName}.exe</outfile>
              <singleInstance>
                <mutexName>ediorSingle</mutexName>
              </singleInstance>
              <supportUrl>https://github.com/chordflower/edior/issues</supportUrl>
              <versionInfo>
                <fileVersion>0.0.0.1</fileVersion>
                <txtFileVersion>${project.version}</txtFileVersion>
                <fileDescription>${project.description}</fileDescription>
                <copyright>Carddamom (C) 2021</copyright>
                <productVersion>0.0.1.0</productVersion>
                <txtProductVersion>${project.version}</txtProductVersion>
                <productName>edior</productName>
                <companyName>${project.organization.name}</companyName>
                <internalName>edior</internalName>
                <originalFilename>edior.exe</originalFilename>
              </versionInfo>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-distribution-windows-jre</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <appendAssemblyId>true</appendAssemblyId>
                  <archive>
                    <addMavenDescriptor>true</addMavenDescriptor>
                    <index>true</index>
                    <compress>true</compress>
                    <manifest>
                      <addBuildEnvironmentEntries>true</addBuildEnvironmentEntries>
                      <addDefaultEntries>true</addDefaultEntries>
                      <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                      <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                    </manifest>
                  </archive>
                  <descriptors>
                    <descriptor>${project.basedir}/src/assembly/distribution-windows-jre.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
              <execution>
                <id>generate-distribution-windows</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <appendAssemblyId>true</appendAssemblyId>
                  <archive>
                    <addMavenDescriptor>true</addMavenDescriptor>
                    <index>true</index>
                    <compress>true</compress>
                    <manifest>
                      <addBuildEnvironmentEntries>true</addBuildEnvironmentEntries>
                      <addDefaultEntries>true</addDefaultEntries>
                      <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                      <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                    </manifest>
                  </archive>
                  <descriptors>
                    <descriptor>${project.basedir}/src/assembly/distribution-windows.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-windows-distribution</id>
                <phase>package</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <target>
                    <copy file="${project.basedir}/target/edior-dist-0.0.1-SNAPSHOT-distribution-windows.zip" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT-win64.zip"/>
                    <copy file="${project.basedir}/target/edior-dist-0.0.1-SNAPSHOT-distribution-windows-jre.zip" tofile="${project.basedir}/../dist/edior-dist-0.0.1-SNAPSHOT-win64-jre.zip"/>
                  </target>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
